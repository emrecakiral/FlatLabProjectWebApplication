@model IEnumerable<EntityLayer.Concrete.Company>

@{
    ViewBag.Title = "Şirket Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Şirket Listesi
                </header>
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th><i class="fa fa-bullhorn"></i> Ünvan</th>
                            <th class="hidden-phone"><i class="glyphicon glyphicon-earphone"></i> İrtibat Tel</th>
                            <th><i class="glyphicon glyphicon-stats"></i> Durum</th>
                            <th><i class="glyphicon glyphicon-pencil"></i> İşlem</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td><a href="/Company/EditCompany/@item.CompanyID">@Html.DisplayFor(modelItem => item.CompanyTitle)</a></td>
                                <td class="hidden-phone">@Html.DisplayFor(modelItem => item.Phone)</td>
                                <td><span class="label label-info label-mini">@Html.DisplayFor(modelItem => item.Address)</span></td>
                                <td>
                                    <a href="/Admin/Company/EditCompany/@item.CompanyID" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                    <a href="/Admin/Company/DeleteCompany/@item.CompanyID" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </section>
        </div>
    </div>
</section>
