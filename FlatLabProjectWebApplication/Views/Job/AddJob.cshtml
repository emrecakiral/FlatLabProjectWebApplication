@model EntityLayer.Concrete.Job

@{
    ViewBag.Title = "AddJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/flatlab-master/assets/bootstrap-fileupload/bootstrap-fileupload.css" rel="stylesheet" />
<link href="~/flatlab-master/assets/bootstrap-wysihtml5/bootstrap-wysihtml5.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/flatlab-master/assets/bootstrap-datepicker/css/datepicker.css" />
<link href="~/flatlab-master/assets/bootstrap-timepicker/compiled/timepicker.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/flatlab-master/assets/bootstrap-datetimepicker/css/datetimepicker.css" />
<link rel="stylesheet" type="text/css" href="~/flatlab-master/assets/jquery-multi-select/css/multi-select.css" />
<link href="~/flatlab-master/css/jquery.datetimepicker.min.css" rel="stylesheet" />
<link href="~/flatlab-master/assets/bootstrap-switch/static/stylesheets/bootstrap-switch.css" rel="stylesheet" />
<!--select 2-->
<link rel="stylesheet" type="text/css" href="~/flatlab-master/assets/select2/css/select2.min.css" />
<h2>AddJob</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="inbox-head" style="text-align:center; margin-bottom:15px;">
        <h3>Yeni Görev Ekle</h3>
    </div>
    <div class="form-horizontal container">
        <div class="form-group">
            <label class="col-md-2">Konu</label>
            <div class="col-md-7">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-md-2">Aciliyet Durumu</label>
            <div class="col-md-7">
                @Html.DropDownListFor(model => model.Priority, (List<SelectListItem>)ViewBag.Priority, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Ayrıntı</label>
            <div class="col-md-7">
                @Html.TextAreaFor(model => model.Contents, 10, 92, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Teslim Tarihi</label>
            <div class="col-md-4">
                <div class="input-group date">
                    <input size="16" type="text" id="CompletionDate" name="CompletionDate" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")" readonly="" class="form_datetime form-control">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-danger date-set"><i class="fa fa-calendar"></i></button>
                    </span>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.CompletionDate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="col-md-2">Personeller</label>
            <div class="col-md-7">
                @Html.DropDownListFor(model => model.PersonnelsIDs, (List<SelectListItem>)ViewBag.personnelList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PersonnelsIDs, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Dökümanlar</label>
            <div class="col-md-7">
                @Html.EditorFor(model => model.Document, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Document, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <br />
            <br />
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Onayla" class="btn btn-primary btn-lg" />
            </div>
            <div class="col-md-5">
                <button style="float:right" type="reset" value="Temizle" class="btn btn-default btn-lg">Temizle</button>
            </div>
        </div>
    </div>
}

<!-- js placed at the end of the document so the pages load faster -->
<script src="~/flatlab-master/js/jquery.js"></script>
<script src="~/flatlab-master/js/bootstrap.min.js"></script>
<script class="include" type="text/javascript" src="~/flatlab-master/js/jquery.dcjqaccordion.2.7.js"></script>
<script src="~/flatlab-master/js/jquery.scrollTo.min.js"></script>
<script src="~/flatlab-master/js/jquery.nicescroll.js" type="text/javascript"></script>
<script src="~/flatlab-master/js/respond.min.js"></script>
<!--this page plugins-->
<script type="text/javascript" src="~/flatlab-master/assets/bootstrap-fileupload/bootstrap-fileupload.js"></script>
<script src="~/Scripts/jquery.datetimepicker.full.min.js"></script>
<script type="text/javascript" src="~/flatlab-master/assets/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
<script type="text/javascript" src="~/flatlab-master/assets/jquery-multi-select/js/jquery.multi-select.js"></script>
<script type="text/javascript" src="~/flatlab-master/assets/jquery-multi-select/js/jquery.quicksearch.js"></script>
<!--select2-->
<script type="text/javascript" src="~/flatlab-master/assets/select2/js/select2.min.js"></script>
<!--this page  script only-->
<script src="~/flatlab-master/js/advanced-form-components.js"></script>
<!--common script for all pages-->
