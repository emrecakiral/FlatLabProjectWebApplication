@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="inbox-head" style="text-align:center; margin-bottom:15px;">
        <h3>Yeni Görev Ekle</h3>
    </div>
    <div class="form-horizontal container">
        <div class="form-group">
            <label class="col-md-2">Konu</label>
            <div class="col-md-7">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-md-2">Aciliyet Durumu</label>
            <div class="col-md-7">
                @Html.DropDownListFor(model => model.Priority, (List<SelectListItem>)ViewBag.Priority, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Ayrıntı</label>
            <div class="col-md-7">
                @Html.TextAreaFor(model => model.Contents, 10, 92, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Teslim Tarihi</label>
            <div class="col-md-4">
                <div class="input-group date">
                    <input size="16" type="text" id="CompletionDate" name="CompletionDate" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")" readonly="" class="form_datetime form-control">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-danger date-set"><i class="fa fa-calendar"></i></button>
                    </span>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.CompletionDate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group last">
            <label class="col-md-2">Personeller</label>
            <div class="col-md-9">
                <select name="country" class="multi-select" multiple="" id="my_multi_select3" style="position: absolute; left: -9999px;">
                    <option value="ZW">Zimbabwe</option>
                </select>
                <div class="ms-container" id="ms-my_multi_select3">
                    <div class="ms-selectable">
                        <input type="text" class="form-control search-input" autocomplete="off" placeholder="search...">
                        <ul class="ms-list" tabindex="-1">
                            <li class="ms-elem-selectable ms-hover" id="AF-selectable" style="">
                                <span>Afghanistan</span>
                            </li>
                            <li class="ms-elem-selectable ms-selected" id="AL-selectable" style="display: none;"><span>Albania</span></li>
                        </ul>
                    </div>
                    <div class="ms-selection">
                        <input type="text" class="form-control search-input" autocomplete="off" placeholder="search..."><ul class="ms-list" tabindex="-1">
                            <li class="ms-elem-selection" id="AF-selection" style="display: none;"><span>Afghanistan</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Dökümanlar</label>
            <div class="col-md-7">
                @Html.EditorFor(model => model.Document, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Document, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <br />
            <br />
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Onayla" class="btn btn-primary btn-lg" />
            </div>
            <div class="col-md-5">
                <button style="float:right" type="reset" value="Temizle" class="btn btn-default btn-lg">Temizle</button>
            </div>
        </div>
    </div>
}

